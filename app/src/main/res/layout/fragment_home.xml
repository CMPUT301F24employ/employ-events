<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background_colour"
    tools:context=".ui.home.HomeFragment">

    <Button
        android:id="@+id/manage_facility_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="72dp"
        android:backgroundTint="@color/button_colour"
        android:drawableLeft="@drawable/white_eye"
        android:text="Manage Facility"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/profile_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="72dp"
        android:backgroundTint="@color/button_colour"
        android:drawableLeft="@drawable/white_person"
        android:text="Profile"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registered_events_button" />

    <Button
        android:id="@+id/notifications_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="72dp"
        android:backgroundTint="@color/button_colour"
        android:drawableLeft="@drawable/white_notification"
        android:text="Notifications"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_button" />

    <Button
        android:id="@+id/admin_view_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="72dp"
        android:backgroundTint="@color/button_colour"
        android:drawableLeft="@drawable/white_eye"
        android:text="Admin View"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scan_qr_code_button" />

    <Button
        android:id="@+id/registered_events_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="72dp"
        android:backgroundTint="@color/button_colour"
        android:drawableLeft="@drawable/white_eye"
        android:text="Registered Events"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manage_facility_button" />

    <Button
        android:id="@+id/scan_qr_code_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="72dp"
        android:backgroundTint="@color/button_colour"
        android:drawableLeft="@drawable/white_eye"
        android:text="@string/scan_qr_code"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notifications_button" />

</androidx.constraintlayout.widget.ConstraintLayout>