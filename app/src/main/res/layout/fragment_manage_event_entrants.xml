<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.events.ManageEventEntrants">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabGravity="start"
        app:tabMode="scrollable">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabWaitlisted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waitlisted" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabCancelled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelled" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabRegistered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registered" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/entrants_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:listitem="@layout/entrant_item" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:columnCount="2"
        android:padding="8dp">

        <Button
            android:id="@+id/sample_entrants"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:text="Sample Entrants" />

        <Button
            android:id="@+id/send_notification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:text="Send Notification" />

        <Button
            android:id="@+id/remove_entrant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:text="Remove Entrant" />

        <Button
            android:id="@+id/view_entrant_map"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:text="View Entrant Map" />
    </GridLayout>

</LinearLayout>