<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top bar with title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Entrants"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="#3F51B5"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tab layout -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.tabs.TabItem
            android:text="All"  android:layout_height="10dp" android:layout_width="10dp"/>
        <com.google.android.material.tabs.TabItem
            android:text="Waitlisted" android:layout_height="10dp" android:layout_width="10dp"/>
        <com.google.android.material.tabs.TabItem
            android:text="Selected" android:layout_height="10dp" android:layout_width="10dp"/>
        <com.google.android.material.tabs.TabItem
            android:text="Cancelled" android:layout_height="10dp" android:layout_width="10dp"/>
        <com.google.android.material.tabs.TabItem
            android:text="Registered" android:layout_height="10dp" android:layout_width="10dp"/>
    </com.google.android.material.tabs.TabLayout>

    <!-- RecyclerView for entrants list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/entrantsRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintBottom_toTopOf="@+id/buttonLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom button layout -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Sample Entrants button -->
        <Button
            android:id="@+id/sampleEntrantsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sample Entrants"
            android:drawableLeft="@drawable/ic_sample_entrants"
            android:backgroundTint="#E0E0E0" />

        <!-- Remove Entrant button -->
        <Button
            android:id="@+id/removeEntrantButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Remove Entrant"
            android:drawableLeft="@drawable/ic_remove_entrant"
            android:backgroundTint="#E0E0E0" />

        <!-- Send Notification button -->
        <Button
            android:id="@+id/sendNotificationButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Send Notification"
            android:drawableLeft="@drawable/ic_notification"
            android:backgroundTint="#E0E0E0" />

        <!-- View Entrant Map button -->
        <Button
            android:id="@+id/viewEntrantMapButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="View Entrant Map"
            android:drawableLeft="@drawable/ic_map"
            android:backgroundTint="#E0E0E0" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
