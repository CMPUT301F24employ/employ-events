<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_light_background"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp">

        <!-- Event Image -->
        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_menu_camera"
            android:contentDescription="Event Image" />

        <!-- White Card Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/white_card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <!-- Event Title Input -->
            <EditText
                android:id="@+id/event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Event Title"
                android:background="@drawable/input_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:singleLine="true" />

            <!-- Description Input -->
            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Description"
                android:background="@drawable/input_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:singleLine="true" />

            <!-- Event Date Button -->
            <Button
                android:id="@+id/event_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Event Date"
                android:layout_marginBottom="12dp"
                android:background="@drawable/button_background"
                android:textColor="@android:color/white" />

            <!-- Registration Deadline Button -->
            <Button
                android:id="@+id/registration_start_deadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Registration Start Date"
                android:layout_marginBottom="12dp"
                android:background="@drawable/button_background"
                android:textColor="@android:color/white" />
            <Button
                android:id="@+id/registration_date_deadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Registration Deadline"
                android:layout_marginBottom="12dp"
                android:background="@drawable/button_background"
                android:textColor="@android:color/white" />

            <!-- Start Time Button -->
            <Button
                android:id="@+id/event_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Start Time"
                android:layout_marginBottom="12dp"
                android:background="@drawable/button_background"
                android:textColor="@android:color/white" />

            <!-- End Time Button -->
            <Button
                android:id="@+id/event_end_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select End Time"
                android:layout_marginBottom="12dp"
                android:background="@drawable/button_background"
                android:textColor="@android:color/white" />

            <!-- Capacity Limit Input -->
            <EditText
                android:id="@+id/limit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Capacity Limit (Optional)"
                android:inputType="number"
                android:background="@drawable/input_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:singleLine="true" />

            <!-- Fee Input -->
            <EditText
                android:id="@+id/fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Fee (Optional)"
                android:inputType="number"
                android:background="@drawable/input_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:singleLine="true" />

            <!-- Geolocation Checkbox -->
            <CheckBox
                android:id="@+id/geolocation_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Geolocation"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Save Event Button -->
        <Button
            android:id="@+id/save_event_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_background"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
