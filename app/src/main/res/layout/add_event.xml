<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.events.AddEventFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_menu_camera"
            android:contentDescription="Event Image" />

        <Button
            android:id="@+id/upload_image_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Image"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Event Title"
            android:minHeight="80dp"
            android:padding="10dp"
            android:singleLine="true" />
        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Description"
            android:minHeight="80dp"
            android:padding="10dp"
            android:singleLine="true" />
        <Button
            android:id="@+id/event_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Event Date"
            android:textColorHint="@color/white"
            android:layout_marginTop="10dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/registration_date_deadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Registration Deadline"
            android:textColorHint="@color/white"
            android:layout_marginTop="10dp"
            android:textAlignment="center" />


        <Button
            android:id="@+id/event_start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Start Time"
            android:textColorHint="@color/white"
            android:layout_marginTop="10dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/event_end_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select End Time"
            android:textColorHint="@color/white"
            android:layout_marginTop="10dp"
            android:textAlignment="center" />
        <EditText
            android:id="@+id/limit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Capacity Limit (Optional)"
            android:inputType="number"
            android:minHeight="80dp"
            android:padding="10dp"
            android:singleLine="true" />
        <EditText
            android:id="@+id/fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Fee (Optional)"
            android:inputType="number"
            android:minHeight="80dp"
            android:padding="10dp"
            android:singleLine="true" />
        <CheckBox
            android:id="@+id/geolocation_statusl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Geolocation"/>

        <Button
            android:id="@+id/save_event_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="Save"
            android:textAlignment="center" />
    </LinearLayout>

</ScrollView>